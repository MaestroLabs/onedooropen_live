<% @page_title = "User List"%>

<div class="user list">
	<h2>Users</h2>
	
	<div><%= pluralize(@users.size, 'users')%> found</div>
	
	<table class="listing" summary="User list">
		<tr class="header">
			<th>Name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
		<% @users.each do |user|%> <!--start loop-->
		<tr class="<%= cycle('odd','even')%>">
			<td><%= user.name %></td>
			<td class="center"><%= mail_to(user.email) %></td> 
			<td class="actions">
				<%= link_to("Show", {:action => 'show',:id => user.id}, :class => 'action show')%>
				<%= link_to("Edit", {:action => 'edit',:id => user.id}, :class => 'action edit')%>
				<%= link_to("Delete", {:action => 'delete', :id => user.id},:class=> 'action delete')%>
			</td>
		</tr>
		<%end%><!--#end loop-->
	</table>
	</div>