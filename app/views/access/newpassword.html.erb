<% @page_title = "OneDoorOpen" %>

<!--Background image-->
<style type="text/css"> 
body {
	background: url('/images/bg.png') no-repeat center center fixed;
	-webkit-background-size: cover; /*Used by Safari & Chrome*/
	-moz-background-size: cover; /* Used by Firefox */
	-o-background-size: cover; /* Used by Opera */
	background-size: cover; /* All Modern Browsers */
}
</style>
</head>

<!--Body-->
<body>
		
	<!--Top bar-->
	<div class="row-fluid" style="margin-top:-4%">
		<div class="span3" style="margin-left:3%;">
	        <%= link_to image_tag("logo-tagline.png",:alt => "OneDoorOpen"), {:action => 'index', :controller => 'access'}%>
		</div>

	</div>
		
		
	<!--Registration form-->			
	<div class="row-fluid">
		<div class="span4 offset4"> 
			<h2>New Password</h2>
			<%=form_for(:user, :url => {:action => 'confirmedNowNewPassword', :id => @activate_user.id}, :html => {:class => 'form-horizontal'}) do |f| %>
			<%=error_messages_for(@activate_user) %>
				<br><br>
					
				<div class="control-group">
					<%=f.label(:password, "New Password", {class: 'control-label', for: 'inputNewPassword'})%>
					<div class="controls">
						<%=f.password_field :password, {class: 'input-large', id: 'inputNewPassword'}%>
					</div>
				</div>
				
				<div class="control-group">
					<%=f.label :password_confirmation, "Confirm New Password", {class: 'control-label', for: 'confirmNewPassword'}%>
					<div class="controls">
						<%=f.password_field :password_confirmation, {class: 'input-large', id: 'confirmNewPassword'}%>
					</div>
				</div>
				
				<br>
			<!--Submit and Cancel buttons-->
				<center>
				<%= submit_tag "Change Password", :class => "btn btn-primary" %>&nbsp;
				</center>
			<%end%>
		</div>
	</div><!--end row fluid-->
			<!--Footer-->
