<% @page_title = "OneDoorOpen" %>

<!--Background image-->
<style type="text/css"> 
body {
	background: url('/images/bg.png') no-repeat center center fixed;
	-webkit-background-size: cover; /*Used by Safari & Chrome*/
	-moz-background-size: cover; /* Used by Firefox */
	-o-background-size: cover; /* Used by Opera */
	background-size: cover; /* All Modern Browsers */
}
</style>
</head>


<!--Body-->
<body>
<div class="container-fluid">
		
	<!--Top bar-->
	<div class="row-fluid" style="margin-top:-4%">
		<div class="span3" style="margin-left:3%;">
	        <%= link_to image_tag("logo-tagline.png",:alt => "OneDoorOpen"), {:action => 'index', :controller => 'access'}%>
		</div>

	</div>
		
		



	<div class="row-fluid">
		<div class="span4 offset4"> 
			<h2>Reset your password</h2>
		
			<p>Enter your email and we will send you a new confirmation token</p>
			<%=form_tag({:action => 'sendpasstoken'},{:multipart => true}) do%>
				<%=text_field_tag :email, nil, {class: 'input-large'}%>
				<%= submit_tag "Send token", :name => nil, :class => 'search btn' %>
			<%end%>	
		
			<p>Enter the confirmation token we emailed to you</p> 
			<%=form_tag({:action => 'confirmNewToken'},{:multipart => true}) do%>
				<%=text_field_tag :token , nil, {class: 'input-large'}%>
				<%= submit_tag "Reset Password", :name => nil, :class => 'search btn'  %>
			<%end%>
		</div>
		
	</div>
	
	<!--Footer-->
<footer class="homepage">
	&copy; Maestro Labs 2013. &nbsp;&nbsp;
    <a href="#">About</a>&nbsp;&nbsp;
    <a href="#">Contact</a>&nbsp;&nbsp;
    <a href="#">Privacy</a>&nbsp;&nbsp;
    <a href="#">Terms</a>
</footer>

</body>
</div>  <!-- end container-fluid -->
</html>